{
  "name": "tripmaster",
  "version": "1.0.0",
  "description": "A comprehensive trip planning application",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev:backend": "nodemon src/app.js",
    "dev:frontend": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx",
    "format": "prettier --write .",
    "test": "jest"
  },
  "author": "AnshKBhatia",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.9.2",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.1",
    "supertest": "^6.3.3",
    "vite": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnshKBhatia/tripgo.git"
  },
  "keywords": [
    "trip",
    "planning",
    "travel",
    "nodejs",
    "express",
    "react",
    "vite"
  ],
  "bugs": {
    "url": "https://github.com/AnshKBhatia/tripgo/issues"
  },
  "homepage": "https://github.com/AnshKBhatia/tripgo#readme",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/tests/*",
      "public/*"
    ],
    "delay": "2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
